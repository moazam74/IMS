@model IMS.Presentation.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="card-title text-danger mb-4">Oops! Something went wrong</h1>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <p class="lead mb-4">
                        We're sorry, but an error occurred while processing your request.
                        @if (Model.Message != null)
                        {
                            <br />
                            <span class="text-danger">@Model.Message</span>
                        }
                    </p>
                    
                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-outline-primary me-2">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                        <a asp-controller="UserProduct" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Return Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<h3>Development Mode</h3>
<p>
    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
</p>
<p>
    <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
    It can result in displaying sensitive information from exceptions to end users.
    For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
    and restarting the app.
</p>
